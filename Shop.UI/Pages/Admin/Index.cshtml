@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}

<div id="app" class="container">
    <div class="columns">
        <div class="column is-3">
            <div class="menu">
                <p class="menu-label">Admin Menu</p>
                <ul class="menu-list">
                    <li><a>Products</a></li>
                    <li><a>Orders</a></li>
                    <li><a>Stock</a></li>
                </ul>
            </div>
        </div>
        <div class="column is-9">
            <div v-if="!editing">
                <button class="button" @@click="newProduct">Add New Product</button>
                <table class="table">
                    <tr>
                        <th>Id</th>
                        <th>Product</th>
                        <th>Value</th>
                    </tr>
                    <tr v-for="(product, index) in products">
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ formatCurrency(product.value) }}</td>
                        <td>
                            <a @@click="editProduct(product.id, index)">Edit</a>
                        </td>
                        <td>
                            <a @@click="deleteProduct(product.id, index)">Remove</a>
                        </td>
                    </tr>
                </table>
            </div>
            <div v-else>
                <div class="field">
                    <div class="control">
                        <input class="input" v-model="productModel.name" />
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <input class="input" v-model="productModel.description" />
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <input class="input" v-model="valueCurrency" @@input="priceChanged" />
                    </div>
                </div>
                    <button class="button is-success" @@click="createProduct" v-if="!productModel.id">Create Product</button>
                    <button class="button is-warning" @@click="updateProduct" v-else>Update Product</button>
                    <button class="button" @@click="cancel">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- production version, optimized for size and speed -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/admin/main.js"></script>
}